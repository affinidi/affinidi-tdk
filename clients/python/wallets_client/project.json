{
  "name": "@affinidi-tdk/wallets-client-python",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}",
  "projectType": "library",
  "private": false,
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "poetry build"
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "changelog": false,
        "git": false,
        "github": true,
        "npm": false,
        "repositoryUrl": "git@github.com:affinidi/affinidi-tdk.git",
        "branches": ["main"],
        "plugins": [
          [
            "@semantic-release/exec",
            {
              "execCwd": "{projectRoot}",
              "prepareCmd": "poetry version ${nextRelease.version}",
              "publishCmd": "poetry publish --skip-existing --build",
              "verifyConditionsCmd": "poetry --version"
            }
          ]
        ]
      }
    }
  },
  "tags": ["lang:python", "kind:client"]
}
