{
  "name": "affinidi_tdk_vault_dart",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}",
  "projectType": "library",
  "private": false,
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "flutter pub get"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "prepare"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "command": "dart format --set-exit-if-changed . && dart analyze --fatal-infos"
      }
    },
    "test": {
      "dependsOn": [
        "prepare"
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "dart test --coverage=../../../coverage"
      }
    },
    "build": {
      "dependsOn": [
        "lint",
        "test"
      ]
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "changelog": false,
        "git": false,
        "github": true,
        "npm": false,
        "repositoryUrl": "git@github.com:affinidi/affinidi-tdk.git",
        "branches": [
          "main"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "sed -i \"s|^version: .*|version: ${RELEASE_VERSION}|\" pubspec.yaml",
          "dart pub publish --skip-validation --force"
        ],
        "parallel": false
      }
    }
  },
  "tags": [
    "lang:dart",
    "kind:package"
  ]
}