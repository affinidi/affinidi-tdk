{
    "root": true,
    "ignorePatterns": [
        "*.js",
        "*.d.ts",
        "node_modules/"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended" // Enables eslint-plugin-prettier and eslint-config-prettier
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off"
    }
}
